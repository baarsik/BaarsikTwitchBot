<Application x:Class="BaarsikTwitchBot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BaarsikTwitchBot"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
             xmlns:conv="clr-namespace:BaarsikTwitchBot.Windows.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="OpenSans">pack://application:,,,/Fonts/#Open Sans</FontFamily>
            <FontFamily x:Key="Play">pack://application:,,,/Fonts/#Play</FontFamily>
            <conv:BitmapImageConverter x:Key="BitmapImageConverter"/>
            <conv:TimeSpanConverter x:Key="TimeSpanConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
